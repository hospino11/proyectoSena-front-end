{{!-- formulario para registrar un nuevo producto  --}}
    <form action="/productos/new-productos" method="post" id="formulario">
        <legend>REGISTRO DE PRODUCTOS</legend>
        <div class="form-group row">
            <label for="input proveedor" class="col-sm-2 col-form-label">Proveedor: </label>
        <div  class="col-sm-10">
            <select name="proveedor" id="proveedor" class="custom-select" required>
                {{#each proveedores}}
                    <option value="{{_id}}">{{nombre}}</option>
                {{/each}}
            </select>
         </div>
        </div>
        <div id="divNombre" class="form-group row">
            <label for="inputNombre" class="col-sm-2 col-form-label">Nombre: </label>
            <div class="col-sm-10">
                <input name="nombre" type="text" class="form-control" id="inputNombre">
            </div>
        </div>
        <div id="divEmail" class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">descripcion: </label>
            <div class="col-sm-10">
                <input name="descripcion" type="text" class="form-control" id="inputEmail">
            </div>
        </div>
        <div id="divDireccion" class="form-group row">
            <label for="inputDireccion" class="col-sm-2 col-form-label">Tipo: </label>
            <div class="col-sm-10">
                <input name="tipo" type="text" class="form-control" id="inputDireccion">
            </div>
        </div>
        <div id="divDireccion" class="form-group row">
            <label for="inputDireccion" class="col-sm-2 col-form-label">F V: </label>
            <div class="col-sm-10">
                <input name="fv" type="date" class="form-control" id="inputDireccion">
            </div>
        </div>
        <div id="divDireccion" class="form-group row">
            <label for="inputDireccion" class="col-sm-2 col-form-label">Precio: </label>
            <div class="col-sm-10">
                <input name="precio" type="text" class="form-control" id="inputDireccion">
            </div>
        </div>
        <div id="divBotones" class="form-group">
            <div>
                <input type="submit" class="btn btn-secondary" value="Registrar">
                <input type="button" class="btn btn-secondary" value="Reiniciar Campos" onclick="document.getElementById('formulario').reset()">
                <input type="button" class="btn btn-secondary" value="Cancelar" onClick="window.location.href='/productos/all'">
            </div>
        </div>
    </form>