{{!-- formulario para editar proveedores --}}
<form action="/proveedores/actualizar-proveedor" method="post" id="formulario">
    <legend>DATOS DE PROVEEDOR</legend>
    <input type="hidden" value="{{proveedor._id}}" name="proveedorId" />
    <div id="divNombre" class="form-group row">
        <label for="inputNombre" class="col-sm-2 col-form-label">Nombre: </label>
        <div class="col-sm-10">
            <input name="nombre" type="text" class="form-control" id="inputNombre" value="{{proveedor.nombre}}" disabled>
        </div>
    </div>
    <div id="divNit" class="form-group row">
        <label for="inputNit" class="col-sm-2 col-form-label">NIT: </label>
        <div class="col-sm-10">
            <input name="nit" type="text" class="form-control" id="inputNit" value="{{proveedor.nit}}" disabled>
        </div>
    </div>
    <div id="divEmail" class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email: </label>
        <div class="col-sm-10">
            <input name="email" type="email" class="form-control" id="inputEmail" value="{{proveedor.email}}" disabled>
        </div>
    </div>
    <div id="divTelefono" class="form-group row">
        <label for="inputTelefono" class="col-sm-2 col-form-label">Tel√©fono: </label>
        <div class="col-sm-10">
            <input name="telefono" type="text" class="form-control" id="inputTelefono" value="{{proveedor.telefono}}" disabled>
        </div>
    </div>
    <div id="divDireccion" class="form-group row">
        <label for="inputDireccion" class="col-sm-2 col-form-label">Direccion: </label>
        <div class="col-sm-10">
            <input name="direccion" type="text" class="form-control" id="inputDireccion" value="{{proveedor.direccion}}" disabled>
        </div>
    </div>
<div id="divBotones" class="form-group">
    <div>
        <input type="button" class="btn btn-secondary" value="Editar"
            onclick="window.location.href='/proveedores/edit/{{proveedor._id}}'">
        <input type="button" value="Imprimir" onclick="window.print()" class="btn btn-secondary">
        <input type="button" class="btn btn-secondary" value="Cancelar"
            onClick="window.location.href='/proveedores/all'">
    </div>
</div>
</form>